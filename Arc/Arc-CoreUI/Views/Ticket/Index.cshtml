@using Arc_CoreUi.ModelViews.Ticket
@model TicketIndexViewModel
<style>
    * > .abs-ctrls { display: block;
        position: absolute;
        width: 100%;
        height: 100%;
        text-align: right;
        font-size: 1rem;
        top: 0;
        left: 0;
        padding: 0.75rem 1.25rem; }
    * > .onHover { display: none; }
    *:hover > .onHover { display: block; }
    td { position: relative; }
</style>
<div class="animated fadeIn">
    <!--/.row-->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    Incidents
                    <div class="abs-ctrls onHover">
                        <span><button id="filter_1" name="filter_1" value="" title="Voir Mes tickets" class="btn btn-sm btn-danger" role="button" >Voir Mes tickets</button></span>
                        <span>&nbsp;|&nbsp;</span>
                        <span><a  title="Voir les filtres" class="btn" data-toggle="collapse" href="#ticketFilters" aria-expanded="false" aria-controls="ticketFilters"><i class="fa fa-list" aria-hidden="true"></i></a>&nbsp;&nbsp;</span>
                    </div>
                </div>
                <div class="card-block">
                    <div class="row collapse" id="ticketFilters">
                        <div class="well">
                            <form class="form-horizontal">

                            </form>
                        </div>
                    </div>
                    <!--/.row-->
                    <table class="table table-sm table-responsive table-hover table-outline mb-0">
                        <thead class="thead-default">
                            <tr>
                                <th class="text-center">
                                    <i class="icon-people"></i>
                                </th>
                                <th>Id</th>
                                <th colspan="2">&nbsp;</th>
                                <th class="text-center">Categorie</th>
                                <th class="text-center">Client</th>
                                <th>Etat</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ticket in Model.Tickets)
                            {
                            <tr>
                                <td class="text-center">
                                    <div class="avatar">
                                        <img src="/img/avatars/1.jpg" class="img-avatar" alt="admin@bootstrapmaster.com" title="Admin">
                                        <span class="avatar-status badge-success"></span>
                                    </div>
                                </td>
                                <td>
                                    <div>@(ticket.id+90000)</div>
                                </td>
                                <td colspan="2">
                                    <div>@ticket.name</div>
                                    <div class="col-md-pull-4 small text-muted">
                                        <strong>Créé le </strong> : @ticket.createdOn.ToString("yyyy/MM/dd à hh:mm")
                                    </div>
                                    <div class="abs-ctrls onHover">
                                        <span><a href="#" title="Répondre" class="text-success"><i class="fa fa-commenting" aria-hidden="true"></i></a>&nbsp;&nbsp;</span>
                                        <span><a href="#" title="Réassigner" class="text-primary"><i class="fa fa-user" aria-hidden="true"></i></a></span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div><img src="~/img/flags/France.png" alt="USA" style="height:24px;"></div>
                                    <div class="small text-muted text-success">
                                        <strong>@ticket.category </strong>
                                    </div>
                                </td>
                                <td>                                    
                                    <div>ELDAPPS</div>
                                    <div class="col-md-pull-4 small text-muted">
                                        <a href="mailto:h.labaste@eldapps.com">Labaste Hugues</a> / <a href="tel:+(33) 01 02 03 0405"><i class="fa fa-phone" aria-hidden="true"></i> +(33) 01 02 03 04 05</a>
                                    </div>
                                </td>
                                <td>
                                    <div class="small text-muted">Derniére réponse</div>
                                    <strong>Il y a 10 sec</strong>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!--/.col-->
    </div>
    <!--/.row-->
    <div class="card">
        <div class="card-block">
            <div class="row">
                <div class="col-sm-5">
                    <h4 class="card-title mb-0">Traffic</h4>
                    <div class="small text-muted">November 2015</div>
                </div>
                <!--/.col-->
                <div class="col-sm-7 hidden-sm-down">
                    <button type="button" class="btn btn-primary float-right">
                        <i class="icon-cloud-download"></i>
                    </button>
                    <div class="btn-toolbar float-right" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-3" data-toggle="buttons" aria-label="First group">
                            <label class="btn btn-outline-secondary">
                                <input type="radio" name="options" id="option1">Day
                            </label>
                            <label class="btn btn-outline-secondary active">
                                <input type="radio" name="options" id="option2" checked="">Month
                            </label>
                            <label class="btn btn-outline-secondary">
                                <input type="radio" name="options" id="option3">Year
                            </label>
                        </div>
                    </div>
                </div>
                <!--/.col-->
            </div>
            <!--/.row-->
            <div class="chart-wrapper" style="height:300px;margin-top:40px;">
                <canvas id="main-chart" class="chart" height="300"></canvas>
            </div>
        </div>
        <div class="card-footer">
            <ul>
                <li>
                    <div class="text-muted">Visits</div>
                    <strong>29.703 Users (40%)</strong>
                    <div class="progress progress-xs mt-2">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </li>
                <li class="hidden-sm-down">
                    <div class="text-muted">Unique</div>
                    <strong>24.093 Users (20%)</strong>
                    <div class="progress progress-xs mt-2">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </li>
                <li>
                    <div class="text-muted">Pageviews</div>
                    <strong>78.706 Views (60%)</strong>
                    <div class="progress progress-xs mt-2">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </li>
                <li class="hidden-sm-down">
                    <div class="text-muted">New Users</div>
                    <strong>22.123 Users (80%)</strong>
                    <div class="progress progress-xs mt-2">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </li>
                <li class="hidden-sm-down">
                    <div class="text-muted">Bounce Rate</div>
                    <strong>40.15%</strong>
                    <div class="progress progress-xs mt-2">
                        <div class="progress-bar" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </li>
            </ul>
        </div>
    </div>
    <!--/.card-->
</div>

        